@model List<UserManagement.Application.DTOs.UserDto>
@{

    ViewBag.Title = "Supervisors";
}

<h2>Supervisors</h2>

<!-- ====================== SEARCH FORM (GET) ====================== -->
<div class="mb-3 d-flex gap-2">
    <input type="text"
           id="searchInput"
           name="Name"
           value="@ViewBag.SearchName"
           placeholder="Search..."
           class="form-control"
           style="width:200px;"
           autocomplete="off" />

    <a href="@Url.Action("Create", "Supervisor")" class="btn btn-success ajax-link">Add Supervisor</a>
</div>


<button type="button" class="btn btn-danger mb-2"
        onclick='openDeleteSelected({
            endpoint: "@Url.Action("DeleteSelected", "Supervisor")",
            title: "Delete Designers",
            messagePrefix: "designers"
        })'>
    Delete Selected
</button>
<table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th><input type="checkbox" id="selectAll" /></th>
                <th>Name</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Account Status</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var sup in Model)
            {
                if(sup.IsDeleted == false)
                {
                    <tr>
                        <td><input type="checkbox" name="selectedIds" value="@sup.Id" /></td>
                        <td>@sup.FullNameEn</td>
                        <td>@sup.UserName</td>
                        <td>@sup.Email</td>
                        <td>@sup.PhoneNumber</td>
                        <td>@sup.Status</td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">...</button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item ajax-link"
                                           href="@Url.Action("Edit", "Supervisor", new { id = @sup.Id })">
                                            Edit
                                        </a>
                                    </li>
                                    @* <li><a class="dropdown-item" asp-controller="Supervisor" asp-action="Delete" asp-route-id="@sup.Id">Delete</a></li> *@
                                    <!-- Delete (POST) -->
                                    <li>
                                        <form asp-controller="Supervisor" asp-action="Delete" method="post">
                                            <input type="hidden" name="id" value="@sup.Id" />
                                            <button type="button"
                                                    class="dropdown-item text-danger"
                                                    onclick="openDeleteSingle('@sup.Id')">
                                                Delete
                                            </button>

                                        </form>
                                    </li>
                                    <li><a class="dropdown-item" asp-controller="Supervisor" asp-action="AddDesigner" asp-route-supervisorId="@sup.Id">Add Designer</a></li>
                                    <li><a class="dropdown-item" asp-controller="Supervisor" asp-action="Block" asp-route-id="@sup.Id">Block</a></li>

                                </ul>
                            </div>
                        </td>
                    </tr>
                }
                
            }
        </tbody>
    </table>






<!-- ====================== PAGINATION ====================== -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@ViewBag.Search">@i</a>
            </li>
        }
    </ul>
</nav>

<!-- ====================== Delete Modal ====================== -->

<script>
    // This runs after partial load
    bindDeleteFunctionality('@ViewBag.DeleteEndpoint');
</script>