<style>
    .sidebar-wrapper {
        width: 260px;
        /* position: fixed; */
        left: 0;
        height: calc(100vh - 56px);
        background: #fff;
        overflow-y: auto;
        z-index: 1000;
        transition: transform 0.3s ease;
        border-right: 1px solid #eee;
    }

    /* Profile section */
    .sidebar-profile {
        text-align: center;
        padding: 25px 10px;
        background: #fff;
        color: #333;
        border-bottom: 1px solid #eee;
    }

        .sidebar-profile .profile-img {
            width: 85px;
            height: 85px;
            border-radius: 50%;
            border: 3px solid #eee;
            margin-bottom: 10px;
            object-fit: cover;
        }

        .sidebar-profile .profile-name {
            font-weight: 600;
            font-size: 16px;
        }

    /* Menu */
    .sidebar-menu {
        list-style: none;
        padding: 20px 0;
        margin: 0;
    }

        .sidebar-menu li {
            position: relative;
        }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            color: #333;
            text-decoration: none;
            font-size: 15px;
            transition: 0.3s ease;
        }

            .sidebar-menu a:hover,
            .sidebar-menu .active > a {
                background: #e3f7fa;
                color: #13c4c4;
                border-radius: 30px;
                margin: 5px 10px;
            }

        .sidebar-menu .icon {
            font-size: 18px;
            width: 30px;
        }

    .pro-badge {
        background: #e6f7ff;
        color: #0099ff;
        border-radius: 20px;
        padding: 3px 10px;
        font-size: 12px;
        margin-left: auto;
    }

    /* Responsive: Mobile */
    @@media (max-width: 991.98px) {
        .sidebar-wrapper {
            transform: translateX(-100%);
        }

        .sidebar-wrapper.show {
            transform: translateX(0);
        }
    }

    @@media (max-width: 767.98px) {
        .sidebar-wrapper {
            position: absolute;
            z-index: 1000;
            height: calc(100vh - 56px);
            overflow-y:auto;
            left: -260px; 
            transition: left 0.3s ease;
        }

            .sidebar-wrapper.show {
                left: 0; /* يظهر */
            }
    }
    /* Main content margin (يُتحكم من الـ Layout أو external CSS) */
</style>

<div class="sidebar-wrapper">

    <div class="sidebar-profile">
        <img src="@Model.ProfileImageUrl" class="profile-img" alt="Profile" />
        <div class="profile-name">@Model.FullName</div>
    </div>

    <ul class="sidebar-menu">
        @{
            var menuItems = new[]
            {
                new { Name = "Dashboard", Controller = "Home", Action = "Index" },
                new { Name = "Supervisor", Controller = "Supervisor", Action = "Index" },
                new { Name = "Designer", Controller = "Designer", Action = "Index" },
                new { Name = "Customer", Controller = "Customer", Action = "Index" },
                new { Name = "Task", Controller = "Task", Action = "Index" },
                new { Name = "Case", Controller = "Case", Action = "Index" }
                };

            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        }

        @foreach (var item in menuItems)
        {
            var isActive = item.Controller == currentController ? "active" : "";
            <li class="@isActive">
                <a asp-controller="@item.Controller" asp-action="@item.Action">
                    @item.Name
                </a>
            </li>
        }
    </ul>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleBtn = document.getElementById('toggleSidebar');
        const sidebar = document.querySelector('.sidebar-wrapper');

        if (toggleBtn && sidebar) {
            toggleBtn.addEventListener('click', () => {
                sidebar.classList.toggle('show');
            });
        }
    });
</script>