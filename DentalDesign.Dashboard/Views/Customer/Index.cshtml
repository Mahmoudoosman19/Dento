@model List<UserManagement.Application.DTOs.UserDto>
@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>

<!-- ====================== SEARCH FORM (GET) ====================== -->
<form method="get" asp-action="Index" class="mb-3 d-flex gap-2">
    <input type="text"
           name="Name"
           value="@ViewBag.Search"
           placeholder="Search..."
           class="form-control"
           style="width:200px;" />

    <button type="submit" class="btn btn-primary">Search</button>
</form>


<form method="post" asp-action="DeleteSelected">
    <button type="submit" class="btn btn-danger mb-2" onclick="openDeleteSelected()">Delete Selected</button>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th><input type="checkbox" id="selectAll" /></th>
                <th>Name</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Account Status</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var cust in Model)
            {
                <tr>
                    <td><input type="checkbox" name="selectedIds" value="@cust.Id" /></td>
                    <td>@cust.FullNameEn</td>
                    <td>@cust.UserName</td>
                    <td>@cust.Email</td>
                    <td>@cust.PhoneNumber</td>
                    <td>@cust.Status</td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">...</button>
                            <ul class="dropdown-menu">
                               
                                <!-- Delete (POST) -->
                                <li>
                                    <form asp-controller="Customer" asp-action="Delete" method="post">
                                        <input type="hidden" name="id" value="@cust.Id" />
                                        <button type="button"
                                                class="dropdown-item text-danger"
                                                onclick="openDeleteSingle('@cust.Id')">
                                            Delete
                                        </button>

                                    </form>
                                </li>
                                <li><a class="dropdown-item" asp-controller="Customer" asp-action="Block" asp-route-id="@cust.Id">Block</a></li>

                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>


<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">

            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteTitle">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-center" id="deleteMessage">
                <p class="mb-2">Are you sure you want to delete?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>

            <div class="modal-footer d-flex justify-content-between">

                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <form id="deleteFormModal" method="post">
                    <input type="hidden" name="ids" id="deleteIds" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

            </div>

        </div>
    </div>
</div>


<!-- ====================== PAGINATION ====================== -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@ViewBag.Search">@i</a>
            </li>
        }
    </ul>
</nav>

<script>
    document.getElementById("selectAll").addEventListener("change", function() {
        let checkboxes = document.querySelectorAll('input[name="selectedIds"]');
        checkboxes.forEach(cb => cb.checked = this.checked);
    });
</script>

@* Delete Modal *@
<script>

    function openDeleteSingle(id) {

        document.getElementById("deleteIds").value = id;
        document.getElementById("deleteFormModal").setAttribute("action", "/Customer/Delete");

        document.getElementById("deleteTitle").innerText = "Delete Customer";
        document.getElementById("deleteMessage").innerHTML = `
            <p class="mb-2">Are you sure you want to delete this customer?</p>
            <p class="text-muted small">This action cannot be undone.</p>
        `;

        var modal = new bootstrap.Modal(document.getElementById("deleteConfirmModal"));
        modal.show();
    }


    function openDeleteSelected() {

        const selected = [...document.querySelectorAll('input[name="selectedIds"]:checked')]
            .map(c => c.value);

        if (selected.length === 0) {
            alert("No supervisors selected.");
            return;
        }

        document.getElementById("deleteIds").value = selected.join(",");
        document.getElementById("deleteFormModal").setAttribute("action", "/Customer/DeleteSelected");

        document.getElementById("deleteTitle").innerText = "Delete Selected customers";
        document.getElementById("deleteMessage").innerHTML = `
            <p class="mb-2">Are you sure you want to delete <strong>${selected.length}</strong> customers?</p>
            <p class="text-muted small">This action cannot be undone.</p>
        `;

        var modal = new bootstrap.Modal(document.getElementById("deleteConfirmModal"));
        modal.show();
    }

</script>

